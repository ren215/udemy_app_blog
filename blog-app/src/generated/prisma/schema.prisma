generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

/**
 * @id : PK( プライマリキー )
 * @default : デフォルト値
 * @unique : 重複不可
 * ? : 必須ではない )
 * @updatedAt : 更新年月
 * @unique : このフィールドの値は重複してはいけない
 * cuid : ユニークなIDを自動生成
 */

model userInfo {
  id        String   @id @default(cuid()) // userId
  email     String   @unique // メールアドレス
  password  String // パスワード
  createAd  DateTime @default(now()) // 作成日
  updatedAd DateTime @updatedAt // 更新日
}
